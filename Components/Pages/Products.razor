@page "/products"

<h3>Products</h3>

<div class="p-2 mt-2">
    <div class="row">
        @foreach (var product in _products)
        {
            <div class="bg-light border col-6">
                <h4 class="text-secondary">@product.Name</h4>
                <label for="is-active">Active?</label>
                <input id="is-active" type="checkbox" @bind="@product.IsActive" disabled/>
                <p @onmouseover="() => ShowProperties(product.Id)"
                   @onmouseout="() => HideProperties(product.Id)">Show properties</p>
                @if (VisibleProductId == product.Id)
                {
                    <div class="bg-body rounded border border-2 p-2 m-2">
                        @foreach (var property in product.Properties)
                        {
                            <p>@property.Key - @property.Value</p>
                        }
                    </div>
                }
                
                <button type="button" class="btn btn-danger" @onclick="() => DeleteProduct(product.Id)">Delete</button>
            </div>
        }
        
        @if (_products.Count <= 0)
        {
            <h4>No products found</h4>
        }
    </div>
</div>

@code {
    private int? VisibleProductId { get; set; } = null;

    private void ShowProperties(int productId)
    {
        VisibleProductId = productId;
    }

    private void HideProperties(int productId)
    {
        if (VisibleProductId == productId)
        {
            VisibleProductId = null;
        }
    }

    private void DeleteProduct(int productId)
    {
        var product = _products.FirstOrDefault(p => p.Id == productId);
        if (product != null)
        {
            _products.Remove(product);
        }
    }

    List<Product> _products = new()
    {
        new Product()
        {
            Id = 1,
            Name = "Midnight Blaze",
            IsActive = false,
            Properties = new List<ProductProperty>
            {
                new() { Id = 1, Key = "Flavor", Value = "Rose" },
                new() { Id = 2, Key = "Size", Value = "20oz" },
                new() { Id = 3, Key = "Color", Value = "Purple" }
            }
        },
        new Product()
        {
            Id = 2,
            Name = "Blossom Lily",
            IsActive = true,
            Properties = new List<ProductProperty>
            {
                new() { Id = 1, Key = "Flavor", Value = "Lily" },
                new() { Id = 2, Key = "Size", Value = "18oz" },
                new() { Id = 3, Key = "Color", Value = "White" }
            }
        }
    };

}